{# START Display motorcyle teaser #}
{% set
  manufacturerClass = [
    node.field_make[0].entity.label|clean_class
  ]
%}
<article{{ attributes.addClass(classes, manufacturerClass) }}>
  <header>
    {{ title_prefix }}
      {% if label and not page %}
      <h2{{ title_attributes.addClass('node__title') }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h2>
    {% endif %}
    {{ title_suffix }}
  </header>
  <div class="mc-teaser" {{ content_attributes.addClass('node__content', 'clearfix') }}>
    {{ content }}
  </div>
</article>
{# END Display motorcyle teaser #}
